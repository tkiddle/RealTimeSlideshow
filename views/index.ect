<html>
	<% include 'header.ect' %>
	<body class="<%= @control %>">
		<div id="slides">
			<% for slide in @options.slides : %>
				<% include @options.slideDir + slide.file, {param : slide.param, options: @options} %>
			<% end %>
		</div>
		<div class="controls">
			<div id="next" data-action="next">
				<div class="arrow-right"></div>
				
			</div>
			<div id="prev" data-action="prev">
				<div class="arrow-left"></div>
			</div>
		</div>
		<% include 'pagination.ect' %>
		<% include 'footer.ect' %>
	</body>
</html>
